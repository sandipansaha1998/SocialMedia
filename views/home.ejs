<link rel="stylesheet" href="/css/home.css">
<h1>Socialise/Home</h1>
<section id="feed-posts">
    <form action="/post/create" method="POST" id="new-post-form">
        <textarea name="content" cols="30" row="3" form="new-post-form" placeholder="Whats on your mind"></textarea>
        <input type="hidden" value="<%= locals.user._id %>" name="user">
        <input type="submit" value="Post">
    </form>

    <!-- Display the posts from the locals -->
    <div id="posts-list-container">
        <ul>
            <!-- Adding Post accessibilty  -->
            <% for(post of posts){ %>
                <%- include('_post')-%>
                    <% } %>

        </ul>
    </div>
</section>

<script src="/js/home_posts.js"></script>